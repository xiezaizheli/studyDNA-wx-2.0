@import 'css/base.wxss';
@import 'css/color.wxss';
@import 'css/box.wxss';

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

page {
  font-family: 'microsoft yahei';
}

text {
  color: #333;
  font-family: 'microsoft yahei';
  font-size: 30rpx;
}

/*按钮*/

.btn-full {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #1495f0;
  color: #fff;
  border: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin: 0;
}

.btn-full-big {
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  background-color: #ffbf06;
  color: #333;
  border: 0;
  border-radius: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
  margin: 0;
}

/*input系列*/

input {
  font-size: 30rpx;
}

.input-placeholder {
  font-family: 'microsoft yahei';
  color: #bbb;
  font-size: 30rpx;
  display: flex;
  align-items: center;
}

/*解决边框的问题*/

button[disabled] {
  background: #cecece !important;
  color: #fff !important;
  border: none !important;
}

button::after {
  transform: scale(0);
  -webkit-transform: scale(0);
}

/*网络状态*/

.no-network {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.no-network-img {
  width: 260rpx;
  height: 260rpx;
}

/*模态框*/

.modal {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  z-index: 10;
}

.overflow-hidden {
  overflow: hidden;
}

/*多行文本模态框*/

.modal-textarea {
  background: #e8e8e8;
  width: 540rpx;
  height: 500rpx;
  position: fixed;
  z-index: 100;
  bottom: 380rpx;
  left: 105rpx;
  border-radius: 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
}

.textarea {
  margin-top: 10rpx;
  border-radius: 5px;
  color: #666;
  background: #fff;
  height: 280rpx;
  font-size: 30rpx;
  line-height: 100rpx;
  padding: 15rpx;
  width: 100%;
  box-sizing: border-box;
}

.textarea-btn {
  width: 371rpx;
  height: 85rpx;
  line-height: 85rpx;
  font-size: 28rpx;
  background: #1495f0;
  color: #fff;
}

/*无更多数据和加载更多*/

.load-more {
  width: 100%;
  text-align: center;
  height: 120rpx;
  line-height: 120rpx;
  background: #fff;
  font-size: 28rpx;
}

.no-more {
  width: 100%;
  text-align: center;
  height: 120rpx;
  line-height: 120rpx;
  background: #fbfbfb;
  color: #666;
  font-size: 26rpx;
}

.no-select-dna {
  position: fixed;
  top:50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 80%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #888;
  font-size: 28rpx;
  text-align: center; 
}

/*音频控制*/

.audio {
  position: fixed;
  top: 50%;
  left: 50%;
  width: 400rpx;
  height: 150rpx;
  transform: translate(-50%, -50%);
  background: rgba(0, 0, 0, 0.5);
  border-radius: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0;
}

.audio-img {
  width: 100rpx;
  height: 100rpx;
}

.audio-btn {
  width: 250rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  margin-top: 30rpx;
  background: #ffbf06;
  color: #fff;
}


