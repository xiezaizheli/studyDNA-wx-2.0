.container {
  padding: 0 75rpx 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.sec {
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-top: 40rpx;
}

.font {
  width: 100%;
  font-weight: bold;
  font-size: 30rpx;
}

.picker {
  width: 100%;
  background: #f2f2f2;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  margin-top: 20rpx;
}

.course-name {
  width: 100%;
  border: 1px solid #eee;
  padding: 0 20rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
  height: 70rpx;
  line-height: 70rpx;
  color: #666;
  font-size: 30rpx;
}

.course-desc {
  width: 100%;
  border: 1px solid #eee;
  min-height: 220rpx;
  margin-top: 20rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #666;
  line-height: 50rpx;
}
