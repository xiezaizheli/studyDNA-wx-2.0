.container {
  width: 100%;
  height: 100%;
}

.logo-img {
  width: 160rpx;
  height: 160rpx;
  margin-top: 60rpx;
}

.main {
  width: 100%;
  margin-top: 60rpx;
}

/*手机号和密码等子版块*/

.sec {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 60rpx;
  background: #fafcfd;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  border-bottom: 1px solid #d9d9d9;
  position: relative;
}

.sec-left {
  width: 125rpx;
  text-align: justify;
  text-align-last: justify;
}

.phone-input {
  flex: 1;
  height: 100%;
  padding-left: 40rpx;
}

.get-identify-code {
  margin-right: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  width: 180rpx;
  font-size: 26rpx;
  padding: 0 !important;
  color: #1495f0;
  border: 1px solid #1495f0;
  background: transparent;
}

.sec-right {
  padding-left: 40rpx;
  height: 100%;
  flex: 1;
  display: flex;
  align-items: center;
}

/*单选框*/

.choose-no {
  background: transparent !important;
  line-height: 0;
}

.radio {
  font-size: 30rpx;
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
}

/*复选框*/

.checkbox-group {
  display: flex;
  align-items: center;
  justify-content: center;
}

.checkbox {
  display: flex;
  align-items: center;
  font-size: 26rpx;
}

.user-agreement {
  font-size: 26rpx;
  color: #1495f0;
}

/*登录按钮*/

.btn-login {
  width: 516rpx;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #1495f0;
  color: #fff;
  border: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}

/*微信登录*/

.wx-login {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin-top: 100rpx;
}

.wx-icon {
  width: 100rpx;
}
