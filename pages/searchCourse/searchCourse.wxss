page {
  height: 100%;
}

/*顶部搜索框*/

.pf-top {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #fff;
  height: 100rpx;
  box-sizing: border-box;
}

.add-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  box-sizing: border-box;
}

.search-container {
  width: 75%;
  background: #eee;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.search-icon {
  margin: 0 5%;
}

.search {
  width: 100%;
  font-size: 26rpx;
  color: #999;
}

.search-btn {
  width: 20%;
  margin-left: 5%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #1296db;
  color: #fff;
  box-sizing: border-box;
}

.horizontal {
  width: 100%;
  height: 1px;
  background: #ddd;
}

/*无结果*/

.no-relative-info {
  width: 80%;
  color: #888;
  font-size: 28rpx;
  margin-top: 20rpx;
  text-align: center;
  line-height: 50rpx;
}

/*有结果*/
@import '../../css/list.wxss';

.mt-120 {
  margin-top: 120rpx;
}

.course-detail {
  padding: 10rpx 40rpx 0 160rpx;
  line-height: 50rpx;
}

.course-detail text {
  text-align: justify;
  font-size: 28rpx;
}
.show-more{
  color: #1495f0;
  font-size: 32rpx;
  padding: 40rpx;
}
