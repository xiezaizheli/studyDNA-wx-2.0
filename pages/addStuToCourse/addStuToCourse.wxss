page {
  background: #f8f8f8;
  height: 100%;
}

/*顶部搜索框*/

.pf-top {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #fff;
  height: 100rpx;
  box-sizing: border-box;
}

.add-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  box-sizing: border-box;
}

.search-container {
  width: 75%;
  background: #eee;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.search-icon {
  margin: 0 5%;
}

.search {
  width: 100%;
  font-size: 26rpx;
  color: #999;
}

.search-btn {
  width: 20%;
  margin-left: 5%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #1296db;
  color: #fff;
  box-sizing: border-box;
}

.horizontal {
  width: 100%;
  height: 1px;
  background: #ddd;
}

/*搜索结果*/

.search-result {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.sec {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  background: #fff;
  border-radius: 15rpx;
  padding: 30rpx;
  box-sizing: border-box;
}
.sec text{
  line-height: 50rpx;
}
.sec-left{
  display: flex;
  align-items: center;
  justify-content: center;
}

.stu-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
  border: 1px solid #ffbf06;
}
.stu-detail{
  margin-left: 20rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.invite-stu{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  margin: 0;
}

/*无结果*/
.no-relative-info{
  width: 90%;
  color: #888;
  font-size: 28rpx;
  margin-top: 20rpx;
  text-align: center;
  line-height: 50rpx;
}