@import "../../template/record-play/record-play-template.wxss";
@import "../../template/record-modal/record-modal-template.wxss";

.container {
  width: 600rpx;
  padding: 60rpx 0 120rpx;
  box-sizing: border-box;
  margin: 0 auto;
}

/*年级和DNA类型*/

.select {
  width: 100%;
  display: flex;
  align-items: center;
  line-height: 50rpx;
}

.font {
  font-weight: bold;
  font-size: 28rpx;
  width: 160rpx;
  text-align: justify;
  text-align-last: justify;
}

.picker {
  flex: 1;
  background: #f2f2f2;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  border-radius: 5px;
  color: #666;
}

/*dna标题和上传图片*/

.select-col {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.textarea-view {
  border-radius: 5px;
  color: #666;
  background: #f2f2f2;
  height: 170rpx;
  min-height: 170rpx;
  font-size: 28rpx;
  line-height: 50rpx;
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

.upload-txt {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  line-height: 50rpx;
}

.upload-info {
  font-size: 26rpx;
  color: #888;
}

.img-list {
  width: 100%;
  padding: 20rpx 0 0 30rpx;
  box-sizing: border-box;
}

.dna-img {
  width: 170rpx;
  height: 170rpx;
  margin-right: 10rpx;
}

