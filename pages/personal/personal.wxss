/*公用*/

page {
  height: 100%;
  background: #f8f8f8;
}

.sec {
  width: 100%;
  padding: 0 50rpx;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  background: #fff;
  border-bottom: 1px solid #d9d9d9;
  position: relative;
}

.font {
  width: 130rpx;
  text-align: justify;
  text-align-last: justify;
}

.cont {
  display: flex;
  align-items: center;
}

.arrow-bottom-img {
  width: 20rpx;
  height: 10rpx;
  margin-left: 40rpx;
}

/*头像特有*/

.head-sec-height {
  height: 180rpx !important;
  line-height: 180rpx !important;
}

.user-img {
  width: 120rpx;
  height: 120rpx;
}

/*姓名和退出账号特有*/

.bt-d9d9d9 {
  border-top: 1px solid #d9d9d9;
}

/*性别特有*/

.sex-picker {
  width: 380rpx;
  text-align: right;
}

/*******   模态框  ********/

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 100;
  width: 600rpx;
  height: 400rpx;
  background: #f2f2f2;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  box-sizing: border-box;
}

.modal-content>view {
  width: 100%;
  height: 100%;
  
}

.modal-title {
  width: 100%;
  display: block;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
}

.name-input {
  background: #fff;
  color: #333;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  border: 1px solid #e8e8e8;
  margin-top: 40rpx;
}

.btn-group {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 40rpx;
}

.cancel-btn {
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  background: #fff;
  color: #666;
  border: 1px solid #e8e8e8;
  margin: 0;
}
