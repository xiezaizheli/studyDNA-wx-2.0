/*有数据*/

.sec {
  width: 700rpx;
  background: #fff;
  border-radius: 15rpx;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  margin: 25rpx;
  margin-bottom: 0;
  display: flex;
  flex-direction: row;
}

.stu-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  border: 1px solid #ffbf06;
}

.sec-right {
  padding-left: 20rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.stu-detail {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.course-info {
  line-height: 50rpx;
}

.btn-group {
  display: flex;
  align-items: center;
  flex-direction: row;
}

.refuse-btn {
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: #ffbf06;
  text-align: center;
  margin: 0;
  font-size: 28rpx;
}
