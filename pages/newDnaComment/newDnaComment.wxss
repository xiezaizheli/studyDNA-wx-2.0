@import "../../template/record-play/record-play-template.wxss";
@import "../../template/record-modal/record-modal-template.wxss";

.container {
  width: 600rpx;
  padding: 60rpx 0 120rpx;
  box-sizing: border-box;
  margin: 0 auto;
}

/*批改摘要*/
.sec {
  width: 100%;
  display: flex;
  align-items: center;
  line-height: 50rpx;
}

.sec-column {
  width: 100%;
  display: flex;
  flex-direction: column;
  line-height: 50rpx;
}

.font {
  font-weight: bold;
  font-size: 28rpx;
  width: 160rpx;
  text-align: justify;
  text-align-last: justify;
}

.comment-brief {
  width: 440rpx;
  background: #f2f2f2;
  height: 64rpx;
  line-height: 64rpx;
  padding-left: 20rpx;
  border-radius: 5px;
  color: #666;
}

.comment-detail {
  border-radius: 5px;
  color: #666;
  background: #f2f2f2;
  min-height: 220rpx;
  font-size: 28rpx;
  line-height: 50rpx;
  padding: 15rpx;
  width: 100%;
  box-sizing: border-box;
  text-align: justify;
}

.img-list {
  width: 100%;
  padding: 20rpx 0 0 30rpx;
  box-sizing: border-box;
}

.dna-img {
  width: 170rpx;
  height: 170rpx;
  margin-right: 10rpx;
}

