.modal-voice{
  background: #f8f8f8;
  width: 540rpx;
  height: 440rpx;
  position: fixed;
  z-index: 100;
  bottom: 380rpx;
  left: 105rpx;
  border-radius: 10px;
}

.record-status {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 100%;
  padding: 80rpx 0;
  box-sizing: border-box;
}

.record-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.record-btn {
  width: 371rpx;
  height: 85rpx;
  line-height: 85rpx;
  font-size: 28rpx;
}

.recording-img {
  width: 80rpx;
  height: 54rpx;
}

.cancel-btn {
  border: 1px solid #1495f0;
  color: #1495f0;
}